<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="chainManager"
        class="com.x.project.application.layer.chain.manager.ChainManagerImpl">
        <property name="chainHandler" ref="chainHandler" />
    </bean>

    <bean id="chainHandler" class="org.mockito.Mockito"
        factory-method="mock">
        <constructor-arg type="java.lang.Class"
            value="com.x.project.application.layer.chain.api.ChainHandler" />
    </bean>

</beans>
